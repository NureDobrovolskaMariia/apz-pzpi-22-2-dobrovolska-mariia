<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/device_card_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp">

    <!-- Назва пристрою -->
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🥚 Назва пристрою"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <!-- Статус з кольоровим кружечком -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <View
            android:id="@+id/statusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/status_online"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/deviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Онлайн"
            android:textSize="14sp"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- Кнопка -->
    <Button
        android:id="@+id/deviceDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переглянути"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="10dp" />
</LinearLayout>
